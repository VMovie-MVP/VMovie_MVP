<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/behind_image"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/behind_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="幕后|凭什么他比奥斯卡历届最佳导演牛逼"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/behind_lv_share_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/movie_detail_bottom_share_icon"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:text="93"
                android:textColor="@color/colorGray6"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/behind_lv_like_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/details_like"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:text="93"
                android:textColor="@color/colorGray6"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

