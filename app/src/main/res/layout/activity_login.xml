<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sunshine.vmovie2.ui.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/login_bg"
            android:src="@mipmap/login_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/login_back"
            android:src="@mipmap/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <EditText
        android:id="@+id/login_email"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:hint="邮箱"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/guide_pass_word"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:hint="密码"
        android:inputType="textWebPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<Button
    android:id="@+id/login_btn"
    android:layout_width="200dp"
    android:layout_gravity="center_horizontal"
    android:text="登录"
    android:background="@drawable/login_button_selector"
    android:textColor="@color/colorWhite"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="2dp"
            android:background="@color/colorGray9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="使用社交平台登录/注册"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="2dp"
            android:background="@color/colorGray9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/login_vblog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@mipmap/share_vblog" />
        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@mipmap/share_qq" />
        <ImageView
            android:id="@+id/login_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@mipmap/share_wechat" />

    </LinearLayout>

</LinearLayout>
