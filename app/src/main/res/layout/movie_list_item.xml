<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/movie_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#3d060606" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五种电影经典摄影镜头"
            android:textColor="@drawable/channel_text_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/movie_list_item_ll"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_list_item_catename_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="混剪"
                android:textColor="@drawable/channel_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  /  "
                android:textSize="12sp"
                android:textColor="@drawable/channel_text_color"
                android:visibility="gone" />

            <TextView
                android:id="@+id/movie_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.06"
                android:textColor="@drawable/channel_text_color"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>