<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/movie_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五种电影经典摄影镜头"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/movie_list_item_ll"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_list_item_catename_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="混剪"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  /  "
                android:visibility="gone"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/movie_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.06"
                android:visibility="gone"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>